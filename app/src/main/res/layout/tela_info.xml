<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/logo_horizontal_verde"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="30dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/secondary"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="317dp"
        tools:layout_editor_absoluteY="33dp"
        tools:text="@string/title_info" />

    <Button
        android:id="@+id/btn_objetivos"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:background="@color/primary"
        android:text="@string/btn_objetivos"
        android:textColor="@color/white"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="99dp" />

    <Button
        android:id="@+id/btn_doacao_alimentos"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:background="@color/primary"
        android:text="@string/btn_pontos_doacaoalimentos"
        android:textColor="@color/white"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="188dp" />

    <Button
        android:id="@+id/btn_coleta_seletiva"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:background="@color/primary"
        android:text="@string/btn_pontos_coletaseletiva"
        android:textColor="@color/white"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="285dp" />

    <Button
        android:id="@+id/btn_perguntas_frequentes"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:background="@color/primary"
        android:text="@string/btn_faq"
        android:textColor="@color/white"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="383dp" />

    <ImageButton
        android:id="@+id/btn_chatbot"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:backgroundTint="@color/transparent"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/icon_chat"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="496dp" />


</androidx.constraintlayout.widget.ConstraintLayout>